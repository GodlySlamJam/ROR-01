<ul>
  <% for message in @a.errors.full_messages %>
  <li>
    <%= message %>
  </li>
  <% end %>
</ul>

<%= form_with(model: @a, local: true) do |form| %>
<p>Name:<%= form.text_field(:name) %></p>
<p>Age:<%= form.text_field(:age) %></p>
<p>Food:<%= form.select :fave_snack,["Krill", "People", "Dragons", "Gods", "Saitamas", "Nothing, they're too good for food"] %></p>
<p>Spieces:<%= form.text_field(:spieces) %></p>
<p>Smell:<%= form.text_field(:smell) %></p>
<p>Description:<%= form.text_field(:blurb) %></p>
<p>Number of Legs:<%= form.text_field(:num_legs) %></p>

<%= form.submit("Submit") %>
<% end %>
